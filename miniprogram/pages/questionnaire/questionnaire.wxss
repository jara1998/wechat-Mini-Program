.title {
  font-weight: bold;
  font-size: 1.2rem;
  display: flex;
  justify-content: center;
  padding-top: 20px;
  padding-bottom: 10px;
}

.container {
  border-radius: 1.5rem 1.5rem 0 0;
  background-color: #ffffff;
  box-shadow: 0px -4px 20px 0px rgba(0, 0, 0, 0.1);
}

.subtitle {
  opacity: 50%;
  display: flex;
  justify-content: center;
  padding: 5px;
}

.question {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.question-set {
  margin: 0rpx 10rpx 0rpx 10rpx;
}

.radio-set {
  margin: 20rpx 20rpx 20rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0;
  list-style: none;
}

.radio-label {
  flex-grow: 1;
}

.radio {
  transform: scale(0.8);
  position: relative;
}

.option {
  font-size: small;
  position: relative;
  left: 14px;
}

.button-container {
  display: flex;
  justify-content: space-between;
  height: 10vh;
}

button {
  transform: scale(0.7);
  overflow: visible;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-image {
  transform: scale(0.5);
}