<view class="container" wx:if="{{!is_completed}}">
  <view class="question" wx:if="{{ pageNum == 0 }}">
    <text>{{pageNum + 1}}. {{questions[pageNum].value}}</text>
    <image src="../../images/questionnaire-1.svg"/>
  </view>
  <radio-group mark:groupMark="{{index}}" class="radio-set">
    <label class="radio-label" wx:for="{{options}}" bindtap="onTap" data-index="{{index}}">
      <view class="choices">
        <radio class="radio" value="{{item.value}}" />
        <text class="option" >{{item.value}}</text>
      </view>
    </label>
  </radio-group>
  <view class="button-container">
        <button bindtap="toPrevPage">
          <image src="../../images/button-previous.svg"/>
        </button>
        <button bindtap="toNextPage">
          <image src="../../images/button-next.svg"/>
        </button>
  </view>
</view>