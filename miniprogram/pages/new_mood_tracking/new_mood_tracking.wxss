.next_prev_button_box {
  display: flex;
  flex-direction: row;
  justify-content: center;
  /* margin-left: 10%; */
  bottom: 50px;
  margin: 30px;
  position: fixed;
}

.button_text {
  color: rgb(255, 255, 255);
  background-color: rgb(37, 83, 184);
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.circle_button {
  display: flex;
  border: 0 solid #ffffff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #cccccc;
  background-color: rgb(53, 74, 194);
