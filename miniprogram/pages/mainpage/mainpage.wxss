.container {
  display: flex;
  flex-direction: column;
}

.moledule {
  background-color: rgb(250, 250, 250);
  position: relative;
  display: flex;
  justify-content: space-between;
  margin-bottom: 3.5rem;
  border-radius: .5rem;
  width: 90%;
  height: 10rem;
  z-index: -1;
}

.content {
  position: relative;
  width: 96%;
  height: 10rem;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  z-index: 1;
}

.check-circle {
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border-style: solid;
  border-width: 2px;
  border-color: black;
  margin-bottom: 70px;
}

.check-circle, text, .length {
  margin-top: 10px;
  margin-left: 10px;
}

.background {
  position: absolute;
  top: 0;
  left: 2%;
  width: 97%;
  height: auto;
}

#moledule-three {
  background-color: #BDD6FF;
}

#moledule-three > .content {
  height: 98%;
  flex-direction: column;
}

#info {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

#info-img {
  height: 47px;
  width: 49px;
  margin-right: 3%;
  margin-top: 3%;
  margin-bottom: 8px;
}

#text {
  width: 100%;
  text-align: left;
  font-size: 18px;
  margin-left: 60px;
  margin-bottom: 15px;
}